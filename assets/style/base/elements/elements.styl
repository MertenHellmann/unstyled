blockquote, q
	quotes: "“ ”"

hr
	background-color: $light
	border: 0
	height: 1px
	margin-bottom: 1 vr

figure
	margin: 0

p
	margin-top: 0
	push-bottom: 1

dfn, cite, em, i
	font-style: italic

blockquote
	position: relative
	push-bottom: 2
	wadding: 1 2 1 3
	font-style: italic
	p
		margin: 0

	&:before
		position: absolute
		font-family: serif
		opacity: .5
		top: -1rem
		left: -.1em
		content: "“"
		font-size: 8rem
		line-height: 100%

address
	push-bottom: 1

pre
	background: $bright
	font-family: "Courier 10 Pitch", Courier, monospace
	push-bottom: 1
	wadding: 2
	max-width: 100%
	overflow: auto

code, kbd, tt, var
	font-family: Monaco, Consolas, "Andale Mono", "DejaVu Sans Mono", monospace

abbr, acronym
	border-bottom: 1px dotted $light
	cursor: help

mark, ins
	background: #fff9c0
	text-decoration: none

big
	font-size: ms(1)
	line-height: auto
