.site-menu .site-menu-toggle
	display: none

@media $portable
	.site-menu__inner
		layer(menu)
		position: fixed
		background-color: $white
		wadding: 3
		wadding-top: 5
		right: 0
		top: 0
		width: 100%
		height: 100vh
		overflow-y: scroll

		display: none

		&.is-open, &.is-open .menu > ul
			display: block


	.site-menu
		clear: both

		.menu > ul
			max-width: 20rem
			margin-left: auto
			margin-right: auto

		.sub-menu
			wadding-top: 1
			wadding-bottom: 1
			wadding-left: 2

		ul
			padding-left: 0

			li
				position: relative
				margin: 0 1px 0px 0

				&:hover > ul
					left: auto

		a
			display: inline-block
			width: 100%
			padding: .3rem 0
			text-decoration: none

		.menu-item-has-children
			min-width: 14rem

		.menu-menu-container
			padding-top: ms(2)
			max-width: 30rem
			center-block()

		.site-menu-toggle
			border: 0
			wadding: 1
			display: block
			margin-left: auto
			margin-right: auto

			width: 100%


		.site-menu-toggle--close
			position: absolute
			top: 0
			left: 0
			width: 100%




