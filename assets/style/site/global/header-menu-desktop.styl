@media $desk
	.site-menu
		.menu
			display: flex
			flex-wrap: wrap
			align-items: center
			justify-content: center

		ul
			padding: 0


		/* Top level items */
		.menu > .menu-item:not(:last-child)
			margin-right: ms(2)

		/*
			Dropdowns
		 */
		.menu-item-has-children
			position: relative

		.sub-menu
			a
				padding: .75rem

		/* Sub-menus Level: 1 */
		.menu > li > .sub-menu
			layer(menu)
			position: absolute
			min-width: 15rem
			top: 120%
			left: 0

			// Prettify
			background-color: $white
			box-shadow: 0px 1px 3px 2px rgba(0, 0, 0, 0.05)
			border-radius: 6px

		/* Deeper sub-menus */
		.sub-menu .sub-menu
			margin-left: 1rem
			border-left: 1px solid $bright
			margin-bottom: .75rem


